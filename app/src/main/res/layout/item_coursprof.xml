<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="10dp"
    app:cardElevation="10dp"
    app:cardMaxElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/im_personne"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="5dp"
            android:src="@mipmap/ic_person"
            app:civ_border_color="#C0C0C0"
            app:civ_border_width="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/idTVCourseName"
            android:layout_width="269dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Ouafae HDILI"
            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/im_personne"
            app:layout_constraintTop_toTopOf="@+id/im_personne" />

        <TextView
            android:id="@+id/idTVCourseDuration"
            android:layout_width="261dp"
            android:layout_height="29dp"
            android:layout_marginTop="12dp"
            android:text="0623651281"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/idTVCourseName"
            app:layout_constraintTop_toBottomOf="@+id/idTVCourseName" />

        <TextView
            android:id="@+id/idTVCourseDescription"
            android:layout_width="265dp"
            android:layout_height="34dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="40dp"
            android:text="description"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/idTVCourseName"
            app:layout_constraintTop_toBottomOf="@+id/idTVCourseName" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>